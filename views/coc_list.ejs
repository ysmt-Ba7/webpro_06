<h1>CoC 狂気一覧</h1>
<a href="/coc/create">新規追加</a>
<table border="1" style="width:100%; margin-top:10px;">
    <tr style="background:#eee;">
        <th>種類</th><th>名前</th><th>内容（概要）</th><th>操作</th>
    </tr>
    <% data.forEach((item, index) => { %>
    <tr>
        <td><%= item.type %></td>
        <td><a href="/coc/<%= index %>"><strong><%= item.name %></strong></a></td>
        <td><%= item.detail.substring(0, 30) %>...</td>
        <td>
            <a href="/coc/edit/<%= index %>">編集</a> | 
            <a href="/coc/delete/<%= index %>" onclick="return confirm('消去しますか？')">削除</a>
        </td>
    </tr>
    <% }) %>
</table>